= form_for([@recipe, @hop_addition], :remote => @remote) do |hop_form|
  = render 'shared/form_errors', :target => @hop_addition

  .add-hop
    .field-row
      .field-group
        .field-label= hop_form.label :hop
        .field= hop_form.select :hop_id,
                          Hop.all.collect {|hop| [hop.name, hop.id] },
                          {:include_blank => true},
                          {:'data-placeholder' => 'Choose Hop...', :class => 'chzn-select'}
      .field-group
        .field-label= hop_form.label(:alpha_acid)
        .field= hop_form.text_field(:alpha_acid, :size => 2) + ' %'

      .field-group
        .field-label= hop_form.label :beta_acid
        .field= hop_form.text_field(:beta_acid, :size => 2) + ' %'

      .field-group
        .field-label= hop_form.label :weight
        .field= hop_form.text_field(:weight, :size => 2) + ' oz.'

      .field-group
        .field-label= hop_form.label :duration
        .field= hop_form.text_field(:duration, :size => 2) + ' minutes'

    .field-row
      .field-group
        .field-label= hop_form.label :form
        .field= hop_form.select :form, [['Pellet', :pellet], ['Whole Leaf', :whole_leaf], ['Plug', :plug]]

      .field-group
        .field-label= hop_form.label :use
        .field= hop_form.select :use, [['Boil', :boil], ['First Wort', :first_wort], ['Dry Hop', :dry_hop]]

    .field-row
      = hop_form.submit

