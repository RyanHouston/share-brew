.beer-profile
  %h3= @recipe.beer_style.name
  .batch-attributes
    .attribute
      %b Mash type
      = @recipe.mash_type
    .attribute
      %b Batch size
      = @recipe.batch_size

  %fieldset.style-guide
    %legend Style Guide
    = render partial: 'beer_style_guide', locals: { beer_style: @recipe.beer_style }

  %fieldset.recipe-profile
    %legend Recipe Profile
    .starting-gravity
      %strong SG
      %span= @recipe.profile.calculated_starting_gravity.to_s + ' SG'
    .final-gravity
      %strong FG
      %span= @recipe.profile.calculated_final_gravity.to_s + ' SG'
    .abv-estimated
      %strong Estimated ABV
      todo
    .abv-actual
      %strong Actual ABV
      todo
    .color
      %strong Color
      %span= @recipe.profile.color.to_s + ' SRM'
    .bitterness
      %strong IBUs
      %span= @recipe.profile.IBUs.round(2)
    .bitterness-ratio
      %strong Bitterness Ratio
      %span= @recipe.profile.bitterness_ratio.round(2).to_s + ' IBUs/SG'

