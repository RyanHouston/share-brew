.beer-profile
  %h3= @recipe.beer_style.name
  .batch-attributes
    .attribute
      %b Mash type
      = @recipe.mash_type
    .attribute
      %b Batch size
      = @recipe.batch_size

  %fieldset.style-guide
    %legend Style Guide
    .gravity
      %strong SG
      = "#{@recipe.beer_style.min_orig_grav} - #{@recipe.beer_style.max_orig_grav}"
      %br
      %strong FG
      = "#{@recipe.beer_style.min_final_grav} - #{@recipe.beer_style.max_final_grav}"
    .color
      %strong Color
      = "#{@recipe.beer_style.min_color} - #{@recipe.beer_style.max_color} SRM"
    .bitterness
      %strong IBUs
      = "#{@recipe.beer_style.min_IBUs} - #{@recipe.beer_style.max_IBUs} IBUs"
    .alcohol
      %strong ABV
      = "#{@recipe.beer_style.min_abv}% - #{@recipe.beer_style.max_abv}%"
    .carbonation
      %strong Carbonation
      = "#{@recipe.beer_style.min_carbonation} - #{@recipe.beer_style.max_carbonation} vols"
  %fieldset.recipe-profile
    %legend Recipe Profile
    .gravity
      %strong SG
      %span= @recipe.profile.calculated_starting_gravity.to_s + ' SG'
      %br
      %strong FG
      %span= @recipe.profile.calculated_final_gravity.to_s + ' SG'
    .alcohol
      %strong Estimated ABV
      todo
      %br
      %strong Actual ABV
      todo
    .color
      %strong Color
      todo
    .bitterness
      %strong IBUs
      %span= @recipe.profile.IBUs.round(2)
      %br
      %strong Bitterness Ratio
      %span= @recipe.profile.bitterness_ratio.round(2).to_s + ' IBUs/SG'

