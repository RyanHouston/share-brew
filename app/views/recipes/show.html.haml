%h2= h @recipe.name
%em=h @recipe.beer_style.name

.right.gravity-block
  %p
    %b Expected OG
    =h @recipe.original_gravity

  %p
    %b Expected FG
    =h @recipe.final_gravity

.right.gravity-block
  - unless @recipe.bitterness.empty?
    %p
      %b Bitterness
      =h "#{@recipe.bitterness} IBUs"

  - unless @recipe.color.empty?
    %p
      %b Color
      =h "#{@recipe.color} SRM"


%div
  %p
    %b Mash type
    =h @recipe.mash_type

  %p
    %b Batch size
    =h @recipe.batch_size
  %p=h @recipe.description

%h3 Ingredients
.ingredients
  %h4 Hops
  .hop-additions
    = render @recipe.hop_additions

  %h4 Yeast
  .yeast-additions
    = render :partial => 'yeast_additions/recipe_listing', :collection => @recipe.yeast_additions, :as => :yeast_addition

%br

%div
  %h3 Procedure
  %pre= @recipe.procedure

= link_to 'Edit', edit_recipe_path(@recipe)
|
= link_to 'Back', recipes_path
